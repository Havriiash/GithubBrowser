<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="android.text.TextUtils" />

        <variable
            name="starred"
            type="com.havriiash.dmitriy.githubbrowser.data.remote.entity.Starred" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="3dp"
        app:contentPadding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    avatarUrl="@{starred.owner.avatarUrl}"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:padding="5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:text="@{starred.name}"
                            android:textColor="@color/colorAccent"
                            android:textSize="14sp"
                            tools:text="name of repository" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:padding="3dp"
                            android:text="@{starred.language}"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:visibility="@{!TextUtils.isEmpty(starred.language) ? View.VISIBLE : View.GONE}"
                            tools:text="Java" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:text="@{starred.description}"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        tools:text="description" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/ic_star"
                    android:gravity="start|center"
                    android:padding="5dp"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    android:text="@{String.valueOf(starred.stargazersCount)}"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    tools:text="2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/ic_fork"
                    android:gravity="start|center"
                    android:padding="5dp"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    android:text="@{String.valueOf(starred.forks)}"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    tools:text="100" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/ic_followers"
                    android:gravity="start|center"
                    android:padding="5dp"
                    android:scaleX="0.7"
                    android:scaleY="0.7"
                    android:singleLine="true"
                    android:text="@{starred.owner.login}"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    tools:text="owner_name asdasd" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>